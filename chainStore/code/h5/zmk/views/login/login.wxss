page {
  line-height: 1;
}

.login-text-view {
  margin: 70rpx 0 0 64rpx;
  height: 43rpx;
  font-size: 46rpx;
  font-weight: bold;
  font-family: PingFang-SC-Bold;
  color: rgba(51, 51, 51, 1);
}

.login-info {
  margin-top: 130rpx;
  padding-left: 64rpx;
  padding-right: 64rpx;
}

.info-view {
  border-bottom: 1rpx solid rgba(237, 237, 238, 1);
  width: 100%;
  margin-top: 36rpx;
}

.info-title {
  height: 23rpx;
  font-size: 24rpx;
  font-family: PingFang-SC-Medium;
  color: rgba(51, 51, 51, 1);
}

.info-input {
  padding: 29rpx 0;
}

.info-input view {
  height: 75rpx;
  font-family: PingFang-SC-Medium;
  color: rgba(51, 51, 51, 1);
  align-self: center;
}

.info-input input {
  width: 75%;
  height: 62rpx;
  line-height: 62rpx;
  font-size: 30rpx;
}

.info-input .placeholder-class {
  color: #333 0.2;
  font-size: 34rpx;
}

.verify-view {
  display: flex;
  flex: row;
}

.verify-view input {
  width: 70%;
}

.verify-view view {
  width: 30%;
  text-align: right;
  height: 62rpx;
  line-height: 62rpx;
  color: #4678fa;
  font-size: 34rpx;
}

.verify-button-disabled {
  color: #bfc1c2;
}

.login {
  width: 100%;
  margin: 142rpx 0 30rpx 0;
}

.login button {
  width: 85%;
  color: #fff;
  background: #4567fa;
}

.click-button {
  background-color: #4678fa;
  opacity: 0.8;
}

.protocol {
  margin: 50rpx auto;
  display: flex;
  font-size: 24rpx;
  flex-direction: column;
  color: #333;
  align-items: center;
}

.protocol view {
  margin-bottom: 20rpx;
  text-align: center;
}

.protocol navigator {
  color: #4678fa;
}

