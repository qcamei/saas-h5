/* views/appointment/product/product.wxss */
@import "../../../../app.wxss";
page{
    background-color:#F7F7F7;
}
:host {
  width:750rpx;
  height:100%;
}

.image-nomoredata{
    width: 200rpx;
    height: 200rpx;
}
.nomoredata{
    text-align: center;
    margin-top: 350rpx
}
.text-nomoredata{
    text-align: center;
    color: #999;
    font-size: 16px
}
.view-bottom {
    height:108rpx;
    width:100%;
    background: white;
    position: fixed;
    bottom:0;
}
.serve text{
    color:#333;
    font-size:26rpx;
}

.sureBtn {
    margin:10rpx 24rpx;
}

.container{
    display: block;
    padding:0;
    width:750rpx;
}

.top-tab{
    padding:0 174rpx;
    display: flex;
    height: 80rpx;
    background: #fff;
    color: #999999;
    font-size: 28rpx;
    line-height: 74rpx;
    margin: 0 0 20rpx 0;
    z-index: 9999;
}
.top-tab .line{
    width: 48rpx;
    height:2rpx;
    border:2rpx solid #4678FA;
    background-color: #4678FA;
    border-radius: 5%/50%;
    margin:0;
}
.toptab {
    width:56rpx;
    margin:0 72rpx;
    text-align: center;
}

.toptab.active{
    color: #333333;
}
.activity{
    width: 750rpx;
    height: 375rpx;
}
.placehold{
    font-size: 28rpx;
}
.item-container {
    background-color: #fff;
}
.item-container.card {
    margin-bottom:20rpx;
}
.line{
    background-color: #f0f0f0;
    margin-left: 12px;
    margin-right: 12px;
    height: 1px
}
.title {
    display: block;
    margin-left:24rpx;
    color:#999999;
    font-size:24rpx;
    height:68rpx;
    line-height:68rpx;
}
